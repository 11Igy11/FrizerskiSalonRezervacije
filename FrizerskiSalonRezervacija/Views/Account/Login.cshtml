@model FrizerskiSalonRezervacija.Models.LoginViewModel

<h1>Prijava</h1>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" asp-for="Email" required />
    </div>
    <div class="form-group">
        <label for="Password">Lozinka</label>
        <input type="password" class="form-control" id="Password" name="Password" asp-for="Password" required />
    </div>
    <div class="form-group">
        <label for="RememberMe">Zapamti me</label>
        <input type="checkbox" class="form-control" id="RememberMe" name="RememberMe" asp-for="RememberMe" />
    </div>
    <button type="submit" class="btn btn-primary">Prijavi se</button>
</form>
