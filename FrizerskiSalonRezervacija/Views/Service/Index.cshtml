@model IEnumerable<FrizerskiSalonRezervacija.Models.Service>

<h1>Popis usluga</h1>

<table class="table">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Cijena</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var service in Model)
        {
            <tr>
                <td>@service.Name</td>
                <td>@service.Price.ToString("C", new System.Globalization.CultureInfo("en-IE"))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning">Uredi</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-danger">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Dodaj novu uslugu</a>
