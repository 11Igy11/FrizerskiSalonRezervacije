@model FrizerskiSalonRezervacija.Models.Service

<h1>Potvrda brisanja</h1>

<h3>Jeste li sigurni da želite obrisati uslugu: @Model.Name?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <!-- Korištenje asp-route-id za prosljeđivanje ID-a -->
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <button type="submit" class="btn btn-danger">Obriši</button>
    <a asp-action="Index" class="btn btn-secondary">Otkaži</a>
</form>
